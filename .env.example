# Asymptote API Configuration

# Data storage directory (where documents and indexes are stored)
DATA_DIR=./data

# Embedding model (from sentence-transformers)
EMBEDDING_MODEL=all-MiniLM-L6-v2

# Text chunking configuration
CHUNK_SIZE=600
CHUNK_OVERLAP=100

# Search configuration
DEFAULT_TOP_K=10
MAX_TOP_K=50

# Metadata storage (json or sqlite)
# json: Simple, good for <1000 documents
# sqlite: Scalable, recommended for >1000 documents (default)
METADATA_STORAGE=json

# Server configuration
HOST=0.0.0.0
PORT=8000

# Multi-user mode (optional - browser-based user isolation)
# Set to true for per-user data storage (each browser gets isolated data)
ENABLE_MULTI_USER=false

# ========================================
# v3.0 Features
# ========================================

# OCR Configuration (for scanned PDF support)
# Requires: pip install pytesseract pdf2image pillow
# Also requires Tesseract OCR installed on system
ENABLE_OCR=false
OCR_ENGINE=pytesseract  # pytesseract or easyocr
OCR_LANGUAGE=eng        # Tesseract language codes, e.g., "eng+fra" for English+French
OCR_FALLBACK_ONLY=true  # Only use OCR when text extraction fails/returns empty

# CSV Indexing Configuration
CSV_ROW_LEVEL_INDEXING=true  # Index CSV rows individually for better search
CSV_ROWS_PER_CHUNK=5         # Rows per chunk when row-level indexing is disabled
